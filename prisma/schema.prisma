// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Login {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  password         String
  emailRecovery    String
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model TipoDeBolsa {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  users       User[] // Associação com o modelo User. Um tipo de bolsa pode estar associado a vários usuários.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Categoria {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  User        User[] // Associação com o modelo User. Uma categoria pode estar associada a vários usuários.
}

// O modelo User representa um usuário.
model User {
  id               Int          @id @default(autoincrement())
  name             String
  matricula        String       @unique
  refeicoesDiarias Int
  TipoDeBolsa      TipoDeBolsa? @relation(fields: [tipoDeBolsaId], references: [id]) // Associação com o modelo TipoDeBolsa. Um usuário pode ter um tipo de bolsa.
  tipoDeBolsaId    Int? // Campo para armazenar o identificador do tipo de bolsa associado ao usuário.
  Categoria        Categoria?   @relation(fields: [categoriaId], references: [id]) // Associação com o modelo Categoria. Um usuário pode ter uma categoria.
  categoriaId      Int? // Campo para armazenar o identificador da categoria associada ao usuário.
  createdAt        DateTime?    @default(now())
  updatedAt        DateTime?    @updatedAt
}
